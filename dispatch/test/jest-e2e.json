{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts",
    "node"
  ],
  "rootDir": "src",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^@modules/(.*)$": "<rootDir>/modules/$1",
    "^@configs/(.*)$": "<rootDir>/configs/$1",
    "^@repositories/(.*)$": "<rootDir>/repository/$1",
    "^@decorators/(.*)$": "<rootDir>/decorators/$1"
  }
}
